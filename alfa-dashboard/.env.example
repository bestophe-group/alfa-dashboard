# ========================================
# ALFA Dashboard - Configuration
# ========================================
# Copy to .env and customize values
# Generate secrets with: openssl rand -base64 32
# ========================================

# ========================================
# DOMAIN CONFIGURATION
# ========================================
# Local development: alfa.local (requires /etc/hosts setup)
# Production VPS: your-domain.com
DOMAIN=alfa.local
ACME_EMAIL=admin@alfa.local

# ========================================
# DATABASE - PostgreSQL
# ========================================
POSTGRES_USER=alfa
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=alfa

# ========================================
# CACHE - Redis
# ========================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ========================================
# SSO - Authentik
# ========================================
# Generate with: openssl rand -base64 60
AUTHENTIK_SECRET_KEY=CHANGE_ME_AUTHENTIK_SECRET_KEY

# ========================================
# AUTOMATION - n8n
# ========================================
# Generate with: openssl rand -base64 32
N8N_JWT_SECRET=CHANGE_ME_N8N_JWT_SECRET

# ========================================
# VPS DEPLOYMENT (optional)
# ========================================
# Uncomment for VPS deployment
# SERVER_IP=your.vps.ip.address
# SSH_USER=root
# SSH_KEY_PATH=~/.ssh/id_rsa
