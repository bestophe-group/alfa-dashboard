    {
      "parameters": {
        "jsCode": "const topics = $('Get Topics').all().map(t => t.json);\nconst hnData = $('Fetch Hacker News').first()?.json || {};\nconst redditData = $('Fetch Reddit ML').first()?.json?.data?.children || [];\n\nconst relevantArticles = [];\nconst now = new Date();\n\n// Parse HN (would need XML parsing in real implementation)\n// Simulate relevant articles for demo\nfor (const topic of topics) {\n  // Simulated matching - in real implementation, parse RSS and match\n  if (Math.random() > 0.7) {\n    relevantArticles.push({\n      title: `New developments in ${topic.keyword}`,\n      url: `https://news.ycombinator.com/item?id=${Date.now()}`,\n      source: 'Hacker News',\n      category: topic.category,\n      keyword: topic.keyword,\n      found_at: now.toISOString()\n    });\n  }\n}\n\n// Parse Reddit\nfor (const post of redditData) {\n  const title = post.data?.title?.toLowerCase() || '';\n  for (const topic of topics) {\n    if (title.includes(topic.keyword.toLowerCase())) {\n      relevantArticles.push({\n        title: post.data.title,\n        url: `https://reddit.com${post.data.permalink}`,\n        source: 'Reddit',\n        category: topic.category,\n        keyword: topic.keyword,\n        score: post.data.score,\n        found_at: now.toISOString()\n      });\n    }\n  }\n}\n\nconst summary = {\n  total_articles: relevantArticles.length,\n  by_category: {},\n  by_source: {},\n  scanned_at: now.toISOString()\n};\n\nfor (const article of relevantArticles) {\n  summary.by_category[article.category] = (summary.by_category[article.category] || 0) + 1;\n  summary.by_source[article.source] = (summary.by_source[article.source] || 0) + 1;\n}\n\nreturn {\n  summary,\n  articles: relevantArticles.slice(0, 10) // Top 10\n};"
      },
